{% extends 'layout.njk' %}

{% block content %}
    <div class="card table-container">
        <table>
            <!--Linha de cima  -->
            <thead>
                <!--Cabeçalhos da tabelas -->                
                <tr>
                    <th>Instrutores</th>
                    <th>Especialidade</th>
                    <th>Ação</th>
                </tr> 
            </thead>
            <tbody>
                 {% for instructor in instructors %}                
                    <tr>
                        <td>{{instructor.name}}</td>
                        <td>{{instructor.services}}</td>
                        <td><a href="/instructors/{{instructor.id}}">Ver</a></td>
                    </tr>                
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}
